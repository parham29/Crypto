<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_coinauto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/autocomplete_item_background">

    <TextView
        android:id="@+id/txt_coin_name_coinauto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:lines="1"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/txt_color_black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_coin_symbol_coinauto"
        app:layout_constraintEnd_toStartOf="@+id/txt_coin_symbol_coinauto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/img_coin_logo_coinauto"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_coin_symbol_coinauto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/txt_color_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_coin_name_coinauto"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_coin_logo_coinauto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintBottom_toBottomOf="@+id/txt_coin_name_coinauto"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/txt_coin_name_coinauto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_coin_name_coinauto"
        app:srcCompat="@drawable/delete" />

</android.support.constraint.ConstraintLayout>